<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="DefaultBlueColor">#0055aa</Color>
    <Color x:Key="IconGreyColor">#212121</Color>
    <Color x:Key="IconBlueColor">#005dba</Color>

    <SolidColorBrush x:Key="DefaultBlue" Color="{DynamicResource DefaultBlueColor}" Opacity="1" />
    <SolidColorBrush x:Key="light-defaultgrey" Color="{DynamicResource IconGreyColor}" Opacity="1" />
    <SolidColorBrush x:Key="light-blue-10" Color="{DynamicResource IconBlueColor}" Opacity="0.1" />
    <SolidColorBrush x:Key="light-blue" Color="{DynamicResource IconBlueColor}" Opacity="1" />
    <SolidColorBrush x:Key="light-white" Color="WhiteSmoke" Opacity="1" />
    <SolidColorBrush x:Key="light-white-10" Color="WhiteSmoke" Opacity="0.1" />

</ResourceDictionary>